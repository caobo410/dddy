<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <report
                id="report_sdtx_pos"
                model="sdtx.pos"
                string="report_sdtx_pos"
                name="sdtx_ckgl_report.report_sdtx_pos_main"
                file="sdtx_pos_report"
                report_type="qweb-pdf" />
        <template id="report_sdtx_pos_main">
            <t t-call="report.html_container">
                <t t-call="report.html_container">
                    <t t-foreach="docs" t-as="o">
                        <!--<t t-call="report.external_layout">-->
                        <div class="page">
                            <!--summary-->
                            <style type="text/css">
                                .table1{margin:10 auto;width:100%;border-spacing:1px;border-collapse:collapse;table-layout:fixed;}
                                .table1 td{height:16px;}
                                .table1 td{word-break:keep-all;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;font-size:16px;}
                                .table1 td.juzhong{ height: 50px; line-height: 50px; text-align: center; font-size:28px; color: #323232;}
                                .table1 td.zi_right{text-align: right;}
                                .table1 td.ju{ text-align: center;}

                                .table{margin:10 auto;width:100%;border-spacing:1px;border:1px solid #dddddd;border-collapse:collapse;table-layout:fixed;}
                                .table td{height:16px;border-right:1px solid #dddddd;border-bottom:1px solid #dddddd;}
                                .table td{word-break:keep-all;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;font-size:16px;}
                                .table td.zi_right{text-align: right;}
                                .table td.ju{ text-align: center;}
                            </style>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td colspan="6" class="juzhong">顺道天下</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="2" >打印时间</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.date_confirm"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" >订单状态</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.state"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" >买家</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.buyers"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" >桌号</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.desk_no"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" >就餐人数</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.people_num"/>
                                        </td>
                                    </tr>
                                    <tr t-foreach="o.line_id" t-as="l">
                                        <td >
                                            <div style="width:100%;overflow: hidden;padding:0px 0px 0px 0px; margin:0px 0px 0px 0px">
                                                <span t-field="l.name"/>
                                            </div>
                                        </td>
                                        <td >
                                            <span t-field="l.num"/>
                                        </td>
                                        <td >
                                            <span t-field="l.price"/>
                                        </td>
                                        <td >
                                            <span t-field="l.sum_price"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" >总金额</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.sum_price"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" >总金额</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.sum_price"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" >支付折扣币</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.sum_price"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" >商家留言</td>
                                        <td colspan="4" width="120">
                                            <span t-field="o.sum_price"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>